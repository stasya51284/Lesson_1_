public class Main {
    public static int[] createArray(int len, int initialValue) {
        int[] arr = new int[len];
        for (int i = 0; i < len; i++) {
            arr[i] = initialValue;
        }
        return arr;
    }

    public static void main(String[] args) {
        int[] array = createArray(10, 7);
        for (int i : array) {
            System.out.print(i + " "); 
        }
    }
}
